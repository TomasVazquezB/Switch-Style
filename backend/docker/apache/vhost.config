<VirtualHost *:80>
    DocumentRoot /var/www/html/public

    # Permitir la sobrecarga de configuraciones con .htaccess
    <Directory /var/www/html/public>
        Options +FollowSymLinks
        AllowOverride All
        Require all granted
    </Directory>

    # Habilitar logs personalizados (opcional)
    ErrorLog ${APACHE_LOG_DIR}/error.log
    CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>
