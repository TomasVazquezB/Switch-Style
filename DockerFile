FROM php:8.2-apache

RUN apt-get update && apt-get install -y libzip-dev zip unzip git curl libpng-dev libonig-dev libxml2-dev libssl-dev pkg-config libgrpc-dev protobuf-compiler

# Instalar extensiones PHP necesarias
RUN docker-php-ext-install pdo pdo_mysql zip exif pcntl bcmath gd opcache soap intl

# Instalar PECL y la extensi√≥n grpc
RUN pecl install grpc && docker-php-ext-enable grpc

RUN a2enmod rewrite

WORKDIR /var/www/html

COPY composer.lock composer.json /var/www/html/
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer
RUN composer install --no-dev --optimize-autoloader --no-interaction

COPY . /var/www/html

RUN chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache

EXPOSE 80

CMD ["apache2-foreground"]
