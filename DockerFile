# Dockerfile para Laravel con extensión grpc para Laravel Cloud

FROM php:8.2-apache

# Variables para evitar preguntas de instalación
ENV DEBIAN_FRONTEND=noninteractive

# Instalar dependencias básicas y extensiones necesarias
RUN apt-get update && apt-get install -y \
    libzip-dev \
    zip \
    unzip \
    git \
    curl \
    libpng-dev \
    libonig-dev \
    libxml2-dev \
    libssl-dev \
    pkg-config \
    libgrpc-dev \
    protobuf-compiler \
    && docker-php-ext-install pdo pdo_mysql zip exif pcntl bcmath gd opcache soap intl

# Instalar y habilitar grpc vía PECL
RUN pecl install grpc && docker-php-ext-enable grpc

# Habilitar mod_rewrite de Apache para Laravel
RUN a2enmod rewrite

# Configurar el directorio de trabajo
WORKDIR /var/www/html

# Copiar composer.lock y composer.json para aprovechar cache
COPY composer.lock composer.json /var/www/html/

# Instalar Composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Instalar dependencias de PHP via Composer (sin dev para producción)
RUN composer install --no-dev --optimize-autoloader --no-interaction

# Copiar todo el código al contenedor
COPY . /var/www/html

# Dar permisos necesarios (puedes ajustar según tu entorno)
RUN chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache

# Exponer el puerto 80
EXPOSE 80

# Comando para iniciar Apache en primer plano
CMD ["apache2-foreground"]
