# Normalización de finales de línea
* text=auto

# Forzar estilo LF (Unix) para código fuente
*.php       text eol=lf
*.blade.php text eol=lf
*.js        text eol=lf
*.jsx       text eol=lf
*.ts        text eol=lf
*.tsx       text eol=lf
*.css       text eol=lf
*.scss      text eol=lf
*.json      text eol=lf
*.yml       text eol=lf
*.yaml      text eol=lf
*.sh        text eol=lf

# Forzar CRLF solo para scripts de Windows
*.bat       text eol=crlf
*.cmd       text eol=crlf
*.ps1       text eol=crlf
